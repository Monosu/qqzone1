<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:orientation="vertical"
              tools:context=".LoginActivity"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="20dp"
                android:src="@drawable/logo_login" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/qz_icon_logo_word_login" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="vertical" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/zhuceName"
	        	android:layout_marginLeft="5dp"
	        	android:layout_marginRight="5dp"
                android:paddingLeft="2dp"
                android:background="@drawable/qz_bg_container_cell_top_normal"
                android:hint="QQ号/手机号/邮箱" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/zhucepsd"
	        	android:layout_marginLeft="5dp"
	        	android:layout_marginRight="5dp"
                android:paddingLeft="2dp"
                android:inputType="textPassword"
                android:background="@drawable/qz_bg_container_cell_bottom_normal"
                android:ems="10"
                android:hint="密码" />
            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/et_code"
                android:background="@drawable/qz_bg_container_cell_bottom_normal"
                android:ems="10"
                android:hint="输入验证码"
                android:paddingLeft="2dp"/>

                <ImageView
                    android:id="@+id/iv_showCode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                   android:layout_weight="1"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:paddingRight="2dp"
                    android:text="获取验证码"
                    android:onClick="getCodes"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp" >

            <Button
                android:id="@+id/regist_btn"
            android:layout_width="match_parent"
        	android:layout_height="45dp"
        	android:layout_gravity="center"
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="10dp"
        	android:background="@drawable/loginbt"
        	android:textSize="20sp"
        	android:text="注册"
        	android:onClick="regist"
            />
        </LinearLayout>
    </LinearLayout>

